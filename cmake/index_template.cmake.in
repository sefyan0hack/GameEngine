<!DOCTYPE html>
<html lang=EN-us>
   <head>
      <meta charset=utf-8>
      <meta content="text/html; charset=utf-8" http-equiv=Content-Type>
      <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
      <style>
        * {
            touch-action: manipulation
        }
        body { 
            margin: 0; 
            overflow: hidden; 
            display: flex;
            justify-content: center;
            align-items: center;
            height: 100vh;
            background: #1a1a1a;
        }
        #canvas {
            display: block;
            box-sizing: border-box;
            width: 95vw;
            height: 95vh;
            border: 2px solid #333;
            touch-action: none; /* Always disable touch actions */
            -ms-touch-action: none;
        }
        /*anything under 768â€¯px is mobile*/
        @media only screen and (max-width: 767px) {
        #canvas {
            width: 100vh;
            height: 100vw;
            transform-origin: 0 0;
            transform: rotate(90deg);
            position: absolute;
            top: 0;
            left: 0;
        }
        }
    </style>
   </head>
   <body>
      <canvas class=emscripten id=canvas oncontextmenu=event.preventDefault() tabindex=-1></canvas>
      <script>

        window.addEventListener('load', () => {
            const canvas = document.getElementById('canvas');
            window.Module = {canvas: canvas};

            // Handle orientation changes
            function handleOrientation() {
                if (window.matchMedia("(orientation: portrait)").matches) {
                    // Portrait mode - swap width/height
                    canvas.style.width = '95vh';
                    canvas.style.height = '95vw';
                } else {
                    // Landscape mode - normal dimensions
                    canvas.style.width = '95vw';
                    canvas.style.height = '95vh';
                }
            }
            
            // Initial orientation setup
            handleOrientation();
            
            // Listen for orientation changes
            window.addEventListener('resize', handleOrientation);
            window.addEventListener('orientationchange', handleOrientation);
        });
      </script>
      <script src=@PROJECT_NAME@.js async></script>
   </body>
</html>